<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeEmpty_llAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--款式首页 没有网络时候 加载的提示页面-->

    <android.widget.Space
        android:id="@+id/homeEmpty_toolBarSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/homeEmpty_tvTopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fasionAI"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/homeEmpty_ivTopSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="0dp"
            android:paddingEnd="18dp"
            android:src="@mipmap/icon_search_black" />
    </RelativeLayout>

    <m.fasion.ai.base.StateView
        android:id="@+id/homeEmpty_stateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>