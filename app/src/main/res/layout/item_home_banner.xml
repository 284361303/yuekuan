<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemHomeBanner_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@color/color_EEEEEE"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/itemHomeBanner_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="17.5dp"
        android:paddingEnd="50dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/itemHomeBanner_tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="「学穿搭变瘦款式合集」一」一」一」一」一" />

    <TextView
        android:id="@+id/itemHomeBanner_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17.5dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="55dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="「学穿搭变瘦款式合集」一起…" />
</androidx.constraintlayout.widget.ConstraintLayout>