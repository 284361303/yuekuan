<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toolbar.EditingDataActivity">

    <include
        android:id="@+id/editingData_title"
        layout="@layout/include_title" />

    <TextView
        android:id="@+id/editingData_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="0dp"
        android:text="@string/editing_name_key"
        android:textColor="@color/color_111111"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editingData_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/editingData_cardView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/color_F7F7F7"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editingData_tv1">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editingData_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="@string/editing_name_hint"
            android:paddingHorizontal="12dp"
            android:singleLine="true"
            android:textColor="@color/color_111111"
            android:textColorHint="@color/color_D1D1D1"
            android:textSize="14sp"
            tools:text="昵称" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/editingData_ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:paddingHorizontal="12dp"
            android:src="@mipmap/icon_delete"
            android:visibility="gone"
            tools:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/editingData_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="0dp"
        android:text="@string/editing_img_key"
        android:textColor="@color/color_111111"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editingData_cardView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editingData_RV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13.5dp"
        android:layout_marginTop="13.5dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/editingData_tv2"
        app:spanCount="4"
        tools:listitem="@layout/item_avatar_list" />

    <TextView
        android:id="@+id/editingData_tvSubmit"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginBottom="35dp"
        android:alpha="0.4"
        android:background="@drawable/shape_111111_2"
        android:gravity="center"
        android:text="@string/sure_edit"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>