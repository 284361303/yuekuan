<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mine.userInfo.EditingUserActivity">

    <include
        android:id="@+id/editingUser_title"
        layout="@layout/include_title" />

    <LinearLayout
        android:id="@+id/editUser_llUserBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="11dp"
        app:layout_constraintTop_toBottomOf="@+id/editingUser_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/head_key"
            android:textColor="@color/color_4A4A4A"
            android:textSize="15sp" />

        <android.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <m.fasion.ai.util.customize.roundedimageview.RoundedImageView
            android:id="@+id/editUser_ivUserBg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dip"
            app:riv_corner_radius="16dip"
            app:riv_oval="false"
            tools:src="@mipmap/aaa" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editUser_llNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="11dp"
        app:layout_constraintTop_toBottomOf="@+id/editUser_llUserBg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickName_key"
            android:textColor="@color/color_4A4A4A"
            android:textSize="15sp" />

        <android.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/editUser_tvNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            app:drawableEndCompat="@mipmap/icon_back_right"
            tools:text="昵称是啥" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editUser_llPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="11dp"
        app:layout_constraintTop_toBottomOf="@+id/editUser_llNickName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_key"
            android:textColor="@color/color_4A4A4A"
            android:textSize="15sp" />

        <android.widget.Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/editUser_tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            tools:text="1300000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>